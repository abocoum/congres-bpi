{% extends 'base.html.twig' %}

{% block title %}Inscription {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/contact.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/contact_responsive.css') }}">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">

{% endblock %}

{% block body %}

    <style>
        .text-color {
            color: #4867c0;
        }

        .card {
            -webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.4);
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.4);

            position: relative;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid transparent;
            border-radius: 0.25rem;
        }
    </style>

    {{ form_start(form) }}

    <div class="home">
        <div class="parallax_background parallax-window" data-parallax="scroll"
             data-image-src="{{ asset('images/events.jpg') }}" data-speed="0.8"></div>

        <!-- header -->
        {% include 'layout/header.html.twig' %}

        <div class="home_content_container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content d-flex flex-row align-items-end justify-content-start">
                            <div class="current_page">Inscription</div>
                            <div class="breadcrumbs ml-auto">
                                <ul>
                                    <li><a href="index.php">Accueil</a></li>
                                    <li>Inscription</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="main-content mt-5" style="margin-bottom:50px">
        <!-- Basic Form area Start -->
        <div class="container">
            <div class="offset-md-2 col-md-8">
                <div class="card bg-boxshadow full-height">
                    <div class="card-body">
                        <h4 class="card-title text-color">Formulaire d'inscription</h4>
                        {{ form_errors(form) }}
                        <form class=" card-body" method="post">
                            <div>
                                <span class="primary-color"><i data-feather="user"></i> Informations personnelles</span>
                                <hr>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="exampleSelectGender" class="text-color">Civilité</label>
                                        {{ form_widget(form.civilite) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="exampleInputName1" class="text-color">Nom :</label>
                                    {{ form_widget(form.nom) }}
                                </div>
                                <div class=" col-md-6 form-group">
                                    <label for="exampleInputName1" class="text-color">Prénom :</label>
                                    {{ form_widget(form.prenom) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="exampleInputName1" class="text-color">Adresse email</label>
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class=" col-md-6 form-group">
                                    <label for="exampleInputName1" class="text-color">Profession</label>
                                    {{ form_widget(form.profession) }}
                                </div>
                            </div>

                            <div class="mt-4">
                                <span class="primary-color"><i data-feather="home"></i> Adresse</span>
                                <hr>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="exampleInputCity1" class="text-color">Ville :</label>
                                    {{ form_widget(form.ville) }}
                                </div>
                                <div class=" col-md-6 form-group">
                                    <label for="exampleInputCity1" class="text-color">Etat/Province :</label>
                                    {{ form_widget(form.province) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCity1" class="text-color">Pays</label>
                                {{ form_widget(form.pays) }}
                            </div>

                            <div class="mt-4">
                                <span class="primary-color"><i data-feather="plus"></i> Autres informations</span>
                                <hr>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="exampleInputCity1" class="text-color">Êtes vous adhérent au Barreau
                                        Penal International (BPI)? <span
                                                style="color:red">*</span> </label>
                                    {{ form_widget(form.estMembreBpi) }}
                                </div>
                                <div class=" col-md-6 form-group">
                                    <label for="exampleInputCity1" class="text-color">Souhaitez-vous faire une
                                        présentation
                                        au congrès? </label>
                                    {{ form_widget(form.estPresentateur) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1" class="text-color">Si oui, veuillez présenter le titre et
                                    un résumé de la présentation: </label>
                                {{ form_widget(form.titrePresentation) }}
                            </div>


                            <div class="mt-4">
                                <span class="primary-color"><i data-feather="info"></i> Informations importantes</span>
                                <hr>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="exampleInputCity1" class="text-color">Date limite pour le titre et le
                                        résumé
                                        de la présentation</label>
                                    <input type="text" class="form-control" id="exampleInputCity1"
                                           placeholder="15 September, 2019" disabled>
                                </div>
                                <div class=" col-md-6 form-group">
                                    <label for="exampleInputCity1" class="text-color">Acceptation de la présentation.
                                        Nous
                                        vous contacterons dès que possible.</label>
                                    <input type="text" class="form-control" id="exampleInputCity1"
                                           placeholder="30 September, 2019" disabled>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1" class="text-color">Date limite d'inscription (frais de
                                    congrès et titre / résumé de la présentation, le cas échéant) </label>
                                <input type="text" class="form-control" id="exampleInputCity1"
                                       placeholder="15 October, 2019" disabled>
                            </div>

                            <div class="mt-4">
                                <hr>
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    <label>
                                        <label for="exampleInputCity1" class="text-color">Prix : <span style="color:red">100 euros</span> </label>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    <label>
                                        {{ form_widget(form.agreeTerms) }}
                                        <span class="check-box-text text-color"> J'accepte que BPI collecte les données de ce formulaire pour cet événement. *</span>
                                    </label>
                                </div>
                            </div>

                            {{ form_row(form._token) }}
                            {{ form_widget(form.save,  { 'label': 'Reserver votre place' }) }}
                            {# <button type="submit" class="btn btn-primary mr-2">Soumettre le formulaire</button> #}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/contact.js') }}"></script>
{% endblock %}
